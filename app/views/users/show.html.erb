<div class="container-contact2">
<div class="wrap-contact2">
<div class="text-center">
	<h1>Artist page</h1>
<div>
  <% if @user.avatar.attached? %>
    <%= image_tag @user.thumbnail %>
  <% end %>
</div>

<p>
	Prénom & Nom : <%= @user.first_name %> <%= @user.last_name %>
</p>
<p>
	Contact : <%= @user.email %>
</p>
<p>
	Specialité : <%= @user.speciality_1 %>
</p>
<% if @user == current_user %>
	<% if @my_group.length > 0 %>
		<h3>Groupes que je gere</h3>
	<% end %>
	<% @my_group.each do |group| %>

	<p><%= group.name %></p>

	<% end %>

	<h3>Demande Pour rejoindre le groupe</h3>
	<% if @my_request.length <= 0 %>
	<p>Vous n'avez aucune demande</p>
	<% end %>

	<% @my_request.each do |request| %>
	<hr>
	<%= link_to request.user.email, user_path(request.user.id) %> 
	<%= link_to "accepter", join_group_path(request.id), :method=> :put %> 
	<%= link_to "reffuser", join_group_path(request.id), :method=> :delete %> <br><br>

	<% end %>
	<a class="btn btn-secondary" href="/after_signups/personal">Editer le profile</a>
<% end %>

</div>
</div>
</div>