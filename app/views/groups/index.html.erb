<a href="<%= new_group_path %>">Création d'un groupe</a>

<div class="container">
    <div class="row">
      <% @all_group.each do |group| %>
      <div class="col-md-4 col-sm-12">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Nom : <%= group.name %></h4>
            <p class="card-text">Déscription :</p>
            <p class="card-text">
              <%= group.body %></p>
            <div class="buy d-flex justify-content-between align-items-center">
                <a href="<%= group_path(group.id) %>" class="btn btn-secondary mt-3"> Voir le groupe</a>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>